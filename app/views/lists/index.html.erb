<div class="container mb-5" class="banner">
  <div style="background-size: cover; background-position: center;">
    <h1><strong>Save any kind of films!</strong></h1>
    <hr class="my-4">
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a list", new_list_path, class: "btn btn-flat" %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if list.movies.empty? %>
            <%= image_tag "Sala_de_cine.jpg", class: "card-img-top", alt: "No movies found", width: 200 %>
          <% else %>
            <%= image_tag list.movies.first.poster_url, class: "card-img-top", alt: list.movies.first.title, width: 200 %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <% if list.bookmarks.any? %>
              <%= link_to "View details", list_path(list), class: "btn btn-primary" %>
            <% else %>
              <p class="card-text">No movies found in this list</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
