
<div class="container mb-5">
  <h1><%= @list.name %></h1>
    <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
    <%= link_to "delete this list", list_path(:id_list), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
 </div>

<div class="cards my-4">
  <%= @bookmarks.each do |bookmark| %>
  <div class="cards">
    <p>Title: <%= bookmark.movie.title %></p>
    <p>Rating: <%= bookmark.movie.rating %></p>
    <p>Overview: <%= bookmark.movie.overview %></p>
    <img src="<%= bookmark.movie.poster_url %>, class= "movie-img", alt="movie">
    <p>Comments: <%= bookmark.comment %></p>
    <% end %>
  </div>
</div>
