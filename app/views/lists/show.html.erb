<div class="container my-4">
  <h1><%= @list.name %></h1>
  <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  <%= link_to "delete this list", list_path(@list), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</div>

<div class="container my-4">
  <% @bookmarks.each do |bookmark| %>
    <div class="card-product">
      <img src="<%= bookmark.movie.poster_url %>">
      <div class="card-product-infos">
        <h2><strong>Title: <%= bookmark.movie.title %></strong></h2>
        <p><i class="fa-solid fa-star"></i> <%= bookmark.movie.rating %></p>
        <p>Overview: <%= bookmark.movie.overview %></p>
        <p><i class="fa-solid fa-comment"></i>  <%= bookmark.comment %></p>
      </div>
    </div>
  <% end %>
</div>
